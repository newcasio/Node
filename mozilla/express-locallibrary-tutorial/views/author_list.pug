extends layout

block content
  h1= title
  
  ul
    each author in author_list
      li 
        //- a(href=author.url) #{author.name}
        a(href=author.url) #{author.author.name}
        |  (#{author.author.birth_formatted} - #{author.author.date_of_death})

    else
      li There are no authors.